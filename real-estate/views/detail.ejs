<!DOCTYPE html>
<html lang="en">
<%- include('partial/head', {title: "Details"}) -%>

    <body class="price-range">
        <!-- Pre Loader -->
        <div id="preloader-area">
            <div class="pulse"></div>
        </div>
        <!-- SCROLL TOP BUTTON -->
        <a class="scrollToTop" href="#"><i class="fa fa-angle-double-up"></i></a>
        <!-- END SCROLL TOP BUTTON -->
        <%- include('partial/header', {active: "properties"}) -%>
  <!-- Start Proerty header  -->

  <section id="property-header">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="property-header-inner">
            <h2>Properties Details</h2>
            <ol class="breadcrumb">
            <li><a href="#">HOME</a></li>            
            <li class="active"><%= data.title %></li>
          </ol>
          </div>
        </div>
      </div>
    </div>
  </section> 
  <!-- End Proerty header  -->

  <!-- Start Properties  -->
  <section id="properties">
    <div class="container">
      <div class="row">
        <div class="col-md-8">
          <div class="properties-content">            
            <!-- Start properties content body -->
            <div class="properties-details">
              <div class="properties-details-img">
                  <% if (data.thumbnail.length){ %>
                      <% data.thumbnail.forEach(value=>{%>
                          <img src="<%= value %>" alt="img">
                      <%}) %>
                  <%}else{%>
                      <img src="/images/no-image.png" alt="img">
                  <%}%>
                  <% data.thumbnail.forEach(value=>{%>
                      <img src="<%= value %>" alt="img">
                      <%}) %>
              </div>
              <div class="properties-info">
                <h2>
                    <%= data.title %>
                </h2>
                <p><%= data.address %></p>
                <% if (locals.user) {%>
                    <% if (data.authorId===locals.user.accountId){%>
                    <span class="delete-property-btn" data-id="<%=data._id%>">Xoá tin</span>
                    <span class="edit-property-btn" data-id="<%=data._id%>">Thay đổi tin</span>
                    <%}%>
                <%}%>
                <hr style="height:1px;border-width:0;color:#f1f1f1;background-color: #D4D4D4">
                <div class="row">
                    <div class="col-md-6">
                        <p>Mức giá:</p>
                        <span class="price"><%= data.price===0?"Giá thoả thuận":data.price<1000?data.price.toString()+" triệu":(Number(locals.getFlooredFixed(parseInt(data.price) / 1000, 2)).toString() + " tỷ")%> <%= data.isSale?"":" / tháng"%></span>
                    </div>
                    <div class="col-md-6">
                        <p>Diện tích:</p>
                        <span class="price"><%= data.area %> m²</span>
                    </div>
                </div>
                <hr style="height:1px;border-width:0;color:#f1f1f1;background-color:#D4D4D4">
                <h4><b>Thông tin mô tả</b></h4>
                <p style="white-space: pre-line">
                    <%= data.description %>
                </p>
                <h4><b>Đặc điểm bất động sản</b></h4>
                <ul>
                    <% if (data.features.rooms) {%>
                        <li><%=data.features.rooms%> Phòng</li>
                    <%}%>
                    <% if (data.features.bathrooms) {%>
                        <li><%=data.features.bathrooms%> Phòng vệ sinh</li>
                    <%}%>
                    <% if (data.features.bedrooms) {%>
                        <li><%=data.features.bedrooms%> Phòng ngủ</li>
                    <%}%>
                    <% if (data.features.floors) {%>
                        <li><%=data.features.floors%> Tầng</li>
                    <%}%>
                </ul>
                <!-- <h4><b>Bản đồ bất động sản</b></h4> -->
                <!-- <div id="map"></div> -->
            </div>
            <!-- Properties social share -->
            <div class="properties-social">
                <ul>
                    <li>Share</li>
                    <li><a href="#"><i class="fa fa-facebook"></i></a></li>
                    <li><a href="#"><i class="fa fa-twitter"></i></a></li>
                    <li><a href="#"><i class="fa fa-google-plus"></i></a></li>
                    <li><a href="#"><i class="fa fa-pinterest"></i></a></li>
                </ul>
            </div>
             <!-- Nearby properties -->
             <div class="nearby-properties">
               <div class="title">
                 <h2>Nearby Properties</h2>
                 <span></span>
               </div>
               <div class="nearby-properties-area">
                 <div class="row">
                   <div class="col-md-6">
                     <article class="properties-item">
                        <a class="properties-item-img" href="#">
                          <img alt="img" src="/images/item/1.jpg">
                        </a>
                        <div class="tag for-sale">
                          For Sale
                        </div>
                        <div class="properties-item-content">
                          <div class="properties-info">
                            <span>5 Rooms</span>
                            <span>2 Beds</span>
                            <span>3 Baths</span>
                            <span>1100 SQ FT</span>
                          </div>
                          <div class="properties-about">
                            <h3><a href="#">Appartment Title</a></h3>
                            <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Enim molestiae vero ducimus quibusdam odit vitae.</p>                      
                          </div>
                          <div class="properties-detial">
                            <span class="price">
                              $35000
                            </span>
                            <a class="secondary-btn" href="#">View Details</a>
                          </div>
                        </div>
                      </article>
                   </div>
                   <div class="col-md-6">
                     <article class="properties-item">
                      <a class="properties-item-img" href="#">
                        <img alt="img" src="/images/item/2.jpg">
                      </a>
                      <div class="tag for-sale">
                        For Sale
                      </div>
                      <div class="properties-item-content">
                        <div class="properties-info">
                          <span>5 Rooms</span>
                          <span>2 Beds</span>
                          <span>3 Baths</span>
                          <span>1100 SQ FT</span>
                        </div>
                        <div class="properties-about">
                          <h3><a href="#">Appartment Title</a></h3>
                          <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit. Enim molestiae vero ducimus quibusdam odit vitae.</p>                      
                        </div>
                        <div class="properties-detial">
                          <span class="price">
                            $35000
                          </span>
                          <a class="secondary-btn" href="#">View Details</a>
                        </div>
                      </div>
                    </article>
                   </div>
                 </div>
               </div>

             </div>

            </div>           
          </div>
        </div>
        <!-- Start properties sidebar -->
        <div class="col-md-4">
          <aside class="properties-sidebar">
            <!-- Start Single properties sidebar -->
            <div class="properties-single-sidebar">
              <h3>Properties Search</h3>
              <form action="">
                <div class="single-advance-search">
                  <input type="text" placeholder="Type Your Location">
                </div>
                <div class="single-advance-search">
                  <select id="" name="">
                   <option selected="" value="0">Category</option>
                    <option value="1">Flat</option>
                    <option value="2">Land</option>
                    <option value="3">Plot</option>
                    <option value="4">Commercial</option>
                  </select>
                </div>
                <div class="single-advance-search">
                  <select id="" name="">
                    <option selected="" value="0">Type</option>
                    <option value="1">Flat</option>
                    <option value="2">Land</option>
                    <option value="3">Plot</option>
                    <option value="4">Commercial</option>
                  </select>
                </div>
                <div class="single-advance-search">
                  <select id="" name="">
                    <option selected="" value="0">Type</option>
                    <option value="1">Flat</option>
                    <option value="2">Land</option>
                    <option value="3">Plot</option>
                    <option value="4">Commercial</option>
                  </select>
                </div>
                <div class="single-filter-search">
                  <span>AREA (SQ)</span>
                  <span>FROM</span>
                  <span id="skip-value-lower" class="example-val">30.00</span>
                  <span>TO</span>
                  <span id="skip-value-upper" class="example-val">100.00</span>
                  <div id="sqrfeet-range" class="noUi-target noUi-ltr noUi-horizontal noUi-background">
                  </div>                  
                </div>
                <div class="single-filter-search">
                  <span>PRICE ($)</span>
                  <span>FROM</span>
                  <span id="skip-value-lower2" class="example-val">30.00</span>
                  <span>TO</span>
                  <span id="skip-value-upper2" class="example-val">100.00</span>
                  <div id="price-range" class="noUi-target noUi-ltr noUi-horizontal noUi-background">
                  </div>      
                </div>
                <div class="single-advance-search">
                  <input type="submit" value="Search" class="search-btn">
                </div>
              </form>
            </div> 
            <!-- Start Single properties sidebar -->
            <div class="properties-single-sidebar">
              <h3>Populer Properties</h3>
              <div class="media">
                <div class="media-left">
                  <a href="#">
                    <img class="media-object" src="/images/item/1.jpg" alt="img">
