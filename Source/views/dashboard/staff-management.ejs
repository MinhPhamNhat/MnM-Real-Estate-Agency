
<!-- sidebar-wrapper  -->
<main class="page-content">
  <div class="container-fluid">
    <h2>Nhân viên</h2>
    <hr>
    <div class="row">
        <div class="col-lg-6">
          <div class="row tm-edit-product-row create-staff">
            <div class="col-xl-6 col-lg-6 col-md-12"><grammarly-extension data-grammarly-shadow-root="true" class="cGcvT" style="position: absolute; top: 0px; left: 0px; pointer-events: none;"></grammarly-extension>
              <div class="form-group mb-3 staff-name">
                <label for="name">Tên nhân viên</label>
                <input id="name" name="name" type="text" class="form-control validate" required>
              </div>
              <div class="form-group mb-3 staff-email">
                <label for="name">Email nhân viên</label>
                <input id="email" name="email" type="email" class="form-control validate" required>
              </div>
              <div class="form-group mb-3 staff-position">
                <label for="position">Vị trí</label>
                <select class="custom-select tm-select-accounts" id="position">
                  <option value="censor" selected>Kiểm duyệt viên</option>
                </select>
              </div>
          </div>
            <div class="col-xl-6 col-lg-6 col-md-12 mx-auto mb-4">
              <div class="form-group mb-3 staff-username">
                <label for="username">Tên tài khoản</label>
                <input id="username" name="username" type="text" class="form-control validate" required>
              </div>
              <div class="form-group mb-3 staff-password">
                <label for="password">Mật khẩu</label>
                <input id="password" name="password" type="password" class="form-control validate" required>
              </div>
              <div class="form-group mb-3 staff-confirm-password">
                <label for="confirm-password">Nhập lại mật khẩu</label>
                <input id="confirm-password" name="confirm-password" type="password" class="form-control validate" required>
              </div>
            </div>
            <div class="col-12">
              <button type="submit" class="btn btn-primary btn-block text-uppercase submit-create-staff">Tạo nhân viên</button>
            </div>
          </div>
          <hr>
          <table id="example" class="table table-striped table-bordered staff-list" style="width:100%">
            <thead>
                <tr>
                    <th>Tên</th>
                    <th>Tên tài khoản</th>
                    <th>Email</th>
                    <th>Vị trí</th>
                </tr>
            </thead>
            <tbody class="table-body">
              <% users.forEach(u => {%>
              <tr class="user-row user-<%=u.accountId%>" onclick=getStaffInfo(this) data-id="<%=u.accountId%>">
                <td>
                  <%=u.name%>
                </td>
                <td>
                  <%=u.username%>
                </td>
                <td>
                  <%=u.email%>
                </td>
                <td>
                  <%=u.position==="censor"?"Kiểm duyệt viên":""%>
                </td>
              </tr>
              <%})%>
            </tbody>
            <tfoot>
                <tr>
                    <th>Tên</th>
                    <th>Tên tài khoản</th>
                    <th>Email</th>
                    <th>SĐT</th>
                </tr>
            </tfoot>
          </table>
        </div>
        <div class="col-lg-6">
          <div class="user-container">
              
          </div>
        </div>
      </div>
  </div>
</main>
<!-- page-content" -->