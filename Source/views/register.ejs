<!DOCTYPE html>
<html lang="en">
    <%- include('partial/head', {title: "Register"}) -%>
  <body>   
  <section id="login">
    <div class="container">
      <div class="row">
        <div class="col-md-12">
          <div class="login-area">
            <div class="login-form">
              <div class="login-form-title">
                <a class="property-home" href="/">Bất động sản 21</a>
                <h4>Tạo tài khoản của bạn để găn kết với chúng tôi</h4>
              </div>
              <form action="register" class="contactform" method="POST">                                                 
                <div class="single-field">
                  <label for="name">Họ và tên <span class="required">(*)</span></label>
                  <input type="text" required="required" aria-required="true" value="<%= data['name'] %>" name="name">
                  <% if (err.param === 'name'){ %>
                    <p style="color:firebrick"><%= err.msg %></p>
                  <%}%>
                </div>
                <div class="single-field">
                  <label for="email">Email <span class="required">(*)</span></label>
                  <input type="email" required="required" aria-required="true" value="<%= data['email'] %>" name="email">
                  <% if (err.param === 'email'){ %>
                    <p style="color:firebrick"><%= err.msg %></p>
                  <%}%>
                </div>
                <div class="single-field">
                  <label for="username">Tên tài khoản <span class="required">(*)</span></label>
                  <input type="text" required="required" aria-required="true" value="<%= data['username'] %>" name="username">
                  <% if (err.param === 'username'){ %>
                    <p style="color:firebrick"><%= err.msg %></p>
                  <%}%>
                </div>
                <div class="single-field">
                  <label for="password">Mật khẩu <span class="required">(*)</span></label>
                  <input type="password" name="password"> 
                  <% if (err.param === 'password'){ %>
                    <p style="color:firebrick"><%= err.msg %></p>
                  <%}%>
                </div>
                <div class="single-field">
                  <label for="confirm-password">Nhập lại mật khẩu <span class="required">(*)</span></label>
                  <input type="password" name="confirm-password"> 
                  <% if (err.param === 'confirm-password'){ %>
                    <p style="color:firebrick"><%= err.msg %></p>
                  <%}%>
                </div>
                <div class="single-submit">
                  <input type="submit" value="Tạo tài khoản" name="submit">        
                              
                </div>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section> 

  <%- include('partial/foot') -%>
  
  </body>
</html>